void setup()
{
  Serial.begin(115200);
  pinMode(latchPin, OUTPUT);
  pinMode(clockPin, OUTPUT);
  pinMode(dataPin, OUTPUT);
  digitalWrite(dataPin, 0);
  digitalWrite(clockPin, 0);
  Serial.println(0 % 2);
}

void loop()
{
  for (int column = 0; column < 8; column++)
  {
    digitalWrite(latchPin, HIGH);
    for (int panel = 0; panel < Ypix / 8; panel++)
    {
      if (panel % 2 == 1)
      {
        for (int block = 0; block < 6; block++) // 6 X 8 by 8 matrixes
        {
          for (int y = 0; y < 8; y++)
          {
            int x = (7 - column) + (block * 8);
            digitalWrite(clockPin, LOW);
            digitalWrite(dataPin, frame1[y + (panel * 8)][x]); //LOW = off, HIGH = on
            digitalWrite(clockPin, HIGH);
          }
        }

        for (int i = 0; i < 8; i++)
        {
          digitalWrite(clockPin, LOW);

          if (i == column)
            digitalWrite(dataPin, LOW); //on

          else
            digitalWrite(dataPin, HIGH); //off

          digitalWrite(clockPin, HIGH);
        }
      }
      else
      {
        for (int block = 0; block < 6; block++) // 6 X 8 by 8 matrixes
        {
          for (int y = 7; y >= 0; y--)
          {
            int x = Xpix - 1 - (7 - column) - (block * 8);
            digitalWrite(clockPin, LOW);
            digitalWrite(dataPin, frame1[y + (panel * 8)][x]); //LOW = off, HIGH = on
            digitalWrite(clockPin, HIGH);
          }
        }

        for (int i = 0; i < 8; i++)
        {
          digitalWrite(clockPin, LOW);

          if (i == column)
            digitalWrite(dataPin, LOW); //on

          else
            digitalWrite(dataPin, HIGH); //off

          digitalWrite(clockPin, HIGH);
        }
      }
    }
    digitalWrite(latchPin, LOW);
  }
