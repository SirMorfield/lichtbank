void setup()
{
  pinMode(latchPin, OUTPUT);
  pinMode(clockPin, OUTPUT);
  pinMode(data1Pin, OUTPUT);
}

void loop()
{
  for (int y = 0; y <= 7; y++)
  {
    digitalWrite(latchPin, HIGH);
    for (int block = Yblocks * 8; block >= 0; block -= 8)
    {
      for (int x = 0; x < Xpix; x += 8)
      {
        for (int y2 = 0; y2 <= 7; y2++)
        {
          digitalWrite(clockPin, LOW);
          int res = pgm_read_word_near(&frame1[y2 + block][x + y]);
          digitalWrite(data1Pin, res); //This is where the magic happens
          digitalWrite(clockPin, HIGH);
        }
      }
      for (int i = 7; i >= 0; i--)
      {
        if (i == y)
        {
          digitalWrite(clockPin, LOW);
          digitalWrite(data1Pin, LOW); //This is where the magic happens
          digitalWrite(clockPin, HIGH);
        }
        else
        {
          digitalWrite(clockPin, LOW);
          digitalWrite(data1Pin, HIGH); //This is where the magic happens
          digitalWrite(clockPin, HIGH);
        }
      }
    }
    digitalWrite(latchPin, LOW);
  }
}
