void setup()
{
  pinMode(latchPin, OUTPUT);
  pinMode(clockPin, OUTPUT);
  pinMode(data1Pin, OUTPUT);
  Serial.begin(115200);
  Serial.println("start");
}

void loop()
{
  for (int y = 0; y <= 7; y++)
  {
    digitalWrite(latchPin, HIGH);
    for (int block = Ypix; block >= 0; block -= 8)
    {
      for (int x = 0; x < Xpix; x += 8)
      {
        for (int y2 = 0; y2 <= 7; y2++)
        {
          digitalWrite(clockPin, LOW);
          byte res = pgm_read_word_near(&frame1[y2 + block][x + y]);
          digitalWrite(data1Pin, res);
          digitalWrite(clockPin, HIGH);
        }
      }
      for (int i = 7; i >= 0; i--)
      {
        digitalWrite(clockPin, LOW);
        if (i == y)
          digitalWrite(data1Pin, LOW);

        else
          digitalWrite(data1Pin, HIGH);

        digitalWrite(clockPin, HIGH);
      }
    }
    digitalWrite(latchPin, LOW);
  }
}
